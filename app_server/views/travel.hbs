<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Travel - Bhaccasyoniztas Beach Resort</title>
	<link rel="stylesheet" href="/css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">

			<!-- Use header partial -->
			{{> header }}

			<div id="contents">
				<div class="box">
					<div>
						<div class="body">
							<h1>Travel</h1>
							<ul id="sites">
								{{#each trips}}
								<li>
									<a href="#"><img src="{{this.image}}" alt="{{this.name}}"></a>
									<h2><a href="#">{{this.name}}</a></h2>
									<p>{{this.description}}</p>
									<p><strong>Length:</strong> {{this.length}}</p>
									<p><strong>Resort:</strong> {{this.resort}}</p>
									<p><strong>Price per person:</strong> {{this.perPerson}}</p>
								</li>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>
			</div>

			<!-- Use footer partial -->
			{{> footer }}

		</div>
	</div>
</body>
</html>
